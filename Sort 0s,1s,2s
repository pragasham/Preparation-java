class Solution {
    public void sort012(int[] arr) {
        int o=0,t=0,z=0;
        for(int i=0;i<arr.length;i++)
        {
            if(arr[i]==0) z++;
            else if(arr[i]==1) o++;
            else t++;
        }
        for(int i=0;i<arr.length;i++){
            if(i<z){
                arr[i]=0;
            }
            else if(i<z+o){
                arr[i]=1;
            }
            else{
                arr[i]=2;
            }
        }    
    }
}
