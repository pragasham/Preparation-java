class Solution {
    int maxSubarraySum(int[] arr) {
        // Code here
        int sum=0;
        int Max=Integer.MIN_VALUE;
        for(int i=0;i<arr.length;i++){
            sum+=arr[i];
            Max=Math.max(sum,Max);
            if(sum<0){
                sum=0;
            }
        }
        return Max;
    }
}
