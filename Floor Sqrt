class Solution {
    int floorSqrt(int n) {
        // code here
        
        int ans=1;
        int a=1;
        int b=n;
        while(a<=b){
            int mid=(a+b)/2;
            if((long)mid*mid==n){
                return mid;
                
            }
            else if((long)mid*mid <n){
                ans=mid;
                a=mid+1;;
            }
            else {
                b=mid-1;
            }
        }
        return ans;
    }
}
